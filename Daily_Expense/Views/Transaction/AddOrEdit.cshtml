@model Daily_Expense.Models.Transaction

@{
    ViewData["Title"] = "Transaction";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
        <div class="col-md-7 style=">
            <div class="widget p-5 ">
            <form asp-action="AddOrEdit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="TransactionId" asp-for="@Model.TransactionId" value="@Model.TransactionId" />
                <div class="form-group">
                    <ejs-datepicker id="date" ejs-for="Date" floatLabelType="Always" placeholder="Date" format="MMM-dd-yyyy"></ejs-datepicker>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <ejs-dropdownlist id="ddlCategory" dataSource="@ViewBag.Categories" ejs-for="CategoryId" 
                    placeholder="Category" floatLabelType="Always" allowFiltering="true"
                    ignoreAccent="true" filterType="Contains">

                        <e-dropdownlist-fields value="CategoryId" text="TitlewithIcon" ></e-dropdownlist-fields>
                        
                    </ejs-dropdownlist>
                    <span asp-validation-for="CategoryId" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-numerictextbox id="amount" min="0" ejs-for="Amout" Type="text" placeholder="Amout" floatLabelType="Always" format="c0"></ejs-numerictextbox>
                    <span asp-validation-for="Amout" class="text-danger fs-6"></span>
                </div>

                <div class="mb-3">
                    <ejs-textbox multiline="true" floatLabelType="Always" placeholder="Note" ejs-for="Note" id="Note"></ejs-textbox>
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>

                @if (Model.TransactionId == 0)
                {
                    <div class="form-group mt-2">
                        <ejs-button type="submit" id="successbtn" cssClass="e-success" content="Create"></ejs-button>

                    </div>
                }
                else
                {
                    <div class="form-group mt-2">
                        <ejs-button type="submit" id="successbtn" cssClass="e-primary" content="Update"></ejs-button>

                    </div>
                }
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:slategray">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>

    </div>
</div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
